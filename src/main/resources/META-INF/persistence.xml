<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="tp_jpa" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.bootcamp.entities.Beneficiaire</class>
    <class>com.bootcamp.entities.Personne</class>
    <class>com.bootcamp.entities.Bailleur</class>
    <class>com.bootcamp.entities.Fournisseur</class>
    <class>com.bootcamp.enums.TypeBailleur</class>
    <class>com.bootcamp.entities.Programme</class>
    <class>com.bootcamp.entities.IndicateurPerformance</class>
    <class>com.bootcamp.entities.IndicateurQuantitatif</class>
    <class>com.bootcamp.entities.IndicateurQualitatif</class>
    <class>com.bootcamp.generation_table.Generation_table</class>
    <class>com.bootcamp.entities.Projet</class>
    <class>com.bootcamp.entities.ProgrammeBeneficiare</class>
    <class>com.bootcamp.entities.FournisseurProgramme</class>
    <class>com.bootcamp.entities.BailleurProgramme</class>
    <class>com.bootcamp.entities.Livrable</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/TP_JPA"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
